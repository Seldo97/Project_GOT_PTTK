{% extends '../formTemplate.twig' %}

{% block title %}
    Zdjêcie
{% endblock %}

{% block header %}
    <h2>Dodaj zdjêcia</h2>
{% endblock %}

{% block form %}

    <form id="addForm" action="/zdjecie/dodaj/{{ idWycieczka }}" method="POST" enctype="multipart/form-data">
        <fieldset>
            <div class="form-group">
                <label for="files">Zdjêcie</label>
                <input type="file" class="form-control" id="files" name="files" multiple="multiple" accept="image/*">
            </div>

            <div class="form-group">
                <label for="opis">Opis</label>
                <textarea id="opis" name="opis" rows="4" cols="50"></textarea>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-info">Dodaj</button>
    </form>

{% endblock %}